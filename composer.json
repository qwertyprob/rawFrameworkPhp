{
      "config": {
            "sort-packages": true   
      },
      "require": {
            "php" :">=8.4.4"
      },
      "require-dev": {
            "phpunit/phpunit": "^12.2",
            "roave/security-advisories": "dev-master"
      },
      "autoload": {
            "psr-4": {
                  "Framework\\" : "src/Framework",
                  "Tests\\" : "tests/"
